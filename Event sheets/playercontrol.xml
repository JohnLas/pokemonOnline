                                            <param id="1" name="Value">0</param>
                                        </action>
                                        <action id="-9" name="Set value" type="System">
                                            <param id="0" name="Variable">relativeY</param>
                                            <param id="1" name="Value">(sin(cangle) * (dist &lt; radius ? dist :  radius))</param>
                                        </action>
                                    </actions>
